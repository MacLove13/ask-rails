<title><%= content_for(:title) || "Time To Answer" %></title>
<%= tag.meta name: "viewport", content: "width=device-width,initial-scale=1,shrink-to-fit=no" %>
<%= tag.meta name: "apple-mobile-web-app-capable", content: "yes" %>
<%= tag.meta name: "mobile-web-app-capable", content: "yes" %>
<%= tag.meta charset: "utf-8" %>
<%= tag.meta name: "turbo-visit-control", content:"reload"%>


<%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css", rel: "stylesheet"%>
<%= stylesheet_link_tag "https://maclove13.github.io/FontAwesome6Pro/css/all.min.css", rel: "stylesheet"%>
<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel: "stylesheet"%>

<%= csrf_meta_tags %>
<%= csp_meta_tag %>
<%= javascript_importmap_tags %>

<!--Alert-->
<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/sweetalert2@11.17.2/dist/sweetalert2.min.css", rel: "stylesheet" %>
<%= javascript_include_tag "https://cdn.jsdelivr.net/npm/sweetalert2@11.17.2/dist/sweetalert2.all.min.js" %>

<body>
   <% if flash[:notice] %>
      <%= javascript_tag do %>
         const Toast = Swal.mixin({
            toast: true,
            position: "top-end",
            showConfirmButton: false,
            timer: 5000,
         });
         Toast.fire({
            icon: "<%= flash[:alert] ? 'warning' : 'success' %>",
            title: "<%= j flash[:alert] || flash[:notice] %>"   
         });
      <% end %>
   <% end %>
</body>
