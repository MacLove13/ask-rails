<div class="col-9 col-xl-8">
   <div class="card bg-primary-subtle py-3 px-4">
      <div class="card-header bg-primary-subtle">
         <h1 class="title-edit"><%= t('index.title_user') %></h1>
      </div>
      <table class="table table-striped table-hover">
         <thead>
            <tr>
               <th scope="col"><%= t('activerecord.attributes.user.username') %></th>
               <th scope="col"><%= t('activerecord.attributes.user.email') %></th>
               <th></th>
            </tr>
         </thead>
         <tbody>
            <% @users.each do |user| %>
               <tr>
                  <td><%= user.username %></td>
                  <td><%= user.email %></td>
                  <td class="gap-1">         
                     <%= link_to edit_panel_admin_user_path(user), class:"btn btn-primary" do %>
                        <i class="fa-light fa-user-pen"></i>
                     <% end %>

                     <%= link_to panel_admin_user_path(user), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class:"btn btn-danger" do %>
                        <i class="fa-light fa-user-xmark"></i>
                     <%end%>
                  </td>
               </tr>
            <% end %>
         </tbody>
      </table>
   </div>
   <%= paginate @users %> 
</div>
