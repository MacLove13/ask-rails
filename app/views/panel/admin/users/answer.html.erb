<div class="col-6 col-xl-4 me-4 ms-4">
  <div class="card bg-primary-subtle py-3 px-4">
    <div class="card-header bg-primary-subtle py-2">
      <h1 class="title-edit"><%= t('answer.title_subjects') %></h1>
    </div>

    <table class="table table-striped table-hover">
      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td data-id="<%= subject.id %>" onclick="OnClickSubject(event)">
              <%= subject.description %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @subjects %> 
</div>

<div class="d-flex flex-column me-4 cardMain align-items-center">
  <div id="cardQuestion">
    <div class="card bg-primary-subtle py-3 px-4">
      <div class="card-header bg-primary-subtle py-2">
        <h1 class="title-edit"><%= t('answer.title_questions') %></h1>
      </div>
      <div id="questions">
        <table class="table table-striped table-hover">
          <tbody id="tableQuestions"></tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Card das Respostas -->
  <div class="mt-2" id="cardAnswer">
    <div class="card bg-primary-subtle py-3 px-4">
      <div class="card-header bg-primary-subtle py-2">
        <h1 class="title-edit"><%= t('answer.title_answers') %></h1>
      </div>
      <div id="answers">
        <ul class="list-group" id="listAnswers"></ul>
      </div>
    </div>
  </div>
</div>