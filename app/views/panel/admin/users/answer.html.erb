<div class="col-6 col-xl-4 me-3">
  <div class="card bg-primary-subtle py-3 px-4">
    <div class="card-header bg-primary-subtle py-2">
      <h1 class="title-edit"><%= t('index.title_subjects') %></h1>
    </div>

    <table class="table table-striped table-hover">
      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td data-id="<%= subject.id %>" onclick="OnClickSubject(event)">
              <%= subject.description %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @subjects %> 
</div>

<div class="d-flex flex-column gap-3">
  <div class="col-12 col-xl-12" style="display:none" id="cardQuestion">
    <div class="card bg-primary-subtle py-3 px-4">
      <div class="card-header bg-primary-subtle py-2">
        <h1 class="title-edit"><%= t('index.title_questions') %></h1>
      </div>
      <div id="questions">
        <table class="table table-striped table-hover">
          <tbody id="tableQuestions"></tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Card das Respostas -->
  <div class="col-11 col-xl-12" style="display:none" id="cardAnswer">
    <div class="card bg-primary-subtle py-3 px-4">
      <div class="card-header bg-primary-subtle py-2">
        <h1 class="title-edit"><%= t('index.title_questions') %></h1>
      </div>
      <div id="answers">
        <ul class="list-group" id="listAnswers"></ul>
      </div>
    </div>
  </div>
</div>

<style>
  .td-selected {
    --bs-table-bg-type: rgba(94, 110, 136, 0.83) !important;
    background-color: rgba(94, 110, 136, 0.83) !important;
    color: white !important;
  }
</style>