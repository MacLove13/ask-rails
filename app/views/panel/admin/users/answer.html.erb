<div class="col-6 col-xl-5 me-4 ms-4">
  <div class="card bg-primary-subtle py-3 px-4">
    <nav class="navbar bg-primary-subtle border-bottom border-body py-3 px-0" data-bs-theme="light">
      <div class="container-fluid">
        <h1 class="title-edit"><%= t('answer.title_subjects') %></h1>
        <%# Campo de pesquisa que permite filtrar os assuntos por nome. Faz requisição GET para a rota 'panel_admin_answer_path' %>
        <%= form_with(url: panel_admin_answer_path, local: true, method: :get, class: "d-flex") do |form| %>
            <%= form.text_field :term, class:"form-control me-2", placeholder: t('answer.search') %>
            <%= button_tag type: "submit", class:"btn btn-outline-primary" do %>
              <i class="fa-regular fa-magnifying-glass"></i>
            <% end %>
        <% end %>
      </div>
    </nav>
    <table class="table table-striped table-hover">
      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td data-id="<%= subject.id %>" onclick="OnClickSubject(event)">
              <%= subject.description %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @subjects %> 
</div>

<div class="d-flex flex-column me-4 cardMain align-items-center">
  <div id="cardQuestion">
    <div class="card bg-primary-subtle py-3 px-4">
      <div class="card-header bg-primary-subtle py-2">
        <h1 class="title-edit"><%= t('answer.title_questions') %></h1>
      </div>
      <div id="questions">
        <table class="table table-striped table-hover">
          <tbody id="tableQuestions"></tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Card das Respostas -->
  <div class="mt-2" id="cardAnswer">
    <div class="card bg-primary-subtle py-3 px-4">
      <div class="card-header bg-primary-subtle py-2">
        <h1 class="title-edit"><%= t('answer.title_answers') %></h1>
      </div>
      <div>
        <div>
          <div class="alert alert-danger alert-dismissible fade d-none fw-semibold text-center" role="alert" id="answerWrong">
            <%= t('answer.answer_wrong') %>
            <button type="button" class="btn-close" onclick="hideAlerts()" aria-label="Fechar"></button>  
          </div>
          <div class="alert alert-success bg-success alert-dismissible fade d-none fw-semibold text-center" role="alert" id="answerCorrect">
            <%= t('answer.answer_correct') %>
            <button type="button" class="btn-close" onclick="hideAlerts()" aria-label="Fechar"></button>  
          </div>
        </div>
        <ul class="list-group list-group-flush" id="listAnswers"></ul>
        <%= button_tag t('answer.button_answers'), type: 'button', onclick: 'SubmitAnswer()', class:"btn btn-card my-3" %>
      </div>
    </div>
  </div>
</div>