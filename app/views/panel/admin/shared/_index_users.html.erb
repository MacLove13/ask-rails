<div class="col-9 col-xl-8">
  <div class="card bg-primary-subtle py-3 px-4">
    <div class="card-header bg-primary-subtle">
      <h1 class="title-edit"><%= t(title_key) %></h1>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col"><%= t('activerecord.attributes.user.username') %></th>
          <th scope="col"><%= t('activerecord.attributes.user.email') %></th>
          <th scope="col">
            <%= link_to btn_link_new, class:"btn btn-info" do %>
              <i class="fa-light fa-user-plus"></i>
            <% end %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% resource.each do |resource_parameters| %>
          <tr>
            <td><%= resource_parameters.username %></td>
            <td><%= resource_parameters.email %></td>
            <td class="gap-1">         
              <%= link_to [:edit, :panel, :admin, resource_parameters], class:"btn btn-primary" do %>
                <i class="fa-light fa-user-pen"></i>
              <% end %>

              <%= link_to [:panel, :admin, resource_parameters], method: :delete, data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class:"btn btn-danger" do %>
                <i class="fa-light fa-user-xmark"></i>
              <%end%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate resource %> 
</div>
