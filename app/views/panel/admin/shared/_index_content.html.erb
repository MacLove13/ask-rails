<div class="col-12 col-xl-10">
  <div class="card bg-primary-subtle py-3 px-4">
    <div class="card-header bg-primary-subtle">
      <h1 class="title-edit"><%= t(title_key) %></h1>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col"><%= t(title_table_01) %></th>
          <th scope="col"><%= t(title_table_02) %></th>
          <th scope="col">
            <%= link_to btn_link_new, class:"btn btn-info" do %>
              <i class="fa-light fa-file-circle-plus"></i>
            <% end %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% resource.each do |resource_parameter| %>
          <tr>
            <td><%= resource_parameter.description %></td>
            <td><%= resource_parameter.subject.description %></td>
            <td class="gap-1">         
              <%= link_to [:edit, :panel, :admin, resource_parameter], class:"btn btn-primary" do %>
                <i class="fa-light fa-file-pen"></i>
              <% end %>

              <%= link_to [:panel, :admin, resource_parameter], method: :delete, data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class:"btn btn-danger" do %>
                <i class="fa-light fa-file-circle-xmark"></i>
              <%end%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate resource %> 
</div>
