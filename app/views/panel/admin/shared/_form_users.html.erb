<%= form_with(model: [:panel, :admin, resource], local: true) do |form| %>
  <div class="row g-3">
    <div class="col-md-12">
      <%= form.label t('form.name'), class: "form-label mb-1 ps-1" %>
      <%= form.text_field bd_name, class: "form-control bg-light-subtle", aria: { label: t('form.first_name') } %>
    </div>
    <div class="col-md-12">
      <%= form.label t('form.address'), class: "form-label mb-1 ps-1" %>
      <%= form.text_field bd_address, class: "form-control bg-light-subtle" %>
    </div>
    <div class="col-md-12">
      <%= form.label t('form.email'), class: "form-label mb-1 ps-1" %>
      <%= form.text_field bd_email, class: "form-control bg-light-subtle", disabled: true %>
    </div>
    <div class="col-md-6">
      <%= form.label t('form.password'), class: "form-label mb-1 ps-1" %>
      <%= form.password_field bd_password, class: "form-control bg-light-subtle" %>
    </div>
    <div class="col-md-6">
      <%= form.label t('form.password_confirmation'), class: "form-label mb-1 ps-1" %>
      <%= form.password_field bd_password_confirmation, class: "form-control bg-light-subtle" %>
    </div>
      
    <% unless [0, 1].include?(current_user.user_type) %>
      <h5 class="form-label mb-0"><%= t('form.user_type') %></h5>
      <div class="col-md-12 d-flex justify-content-around">
        <div class="form-check">
          <%= form.radio_button :user_type, 0, class: "form-check-input", id: "user_type_0" %>
          <%= form.label :user_type_0, t('form.user_type_0'), class: "form-label", style: "font-weight: 500" %>
        </div>
        <div class="form-check">
          <%= form.radio_button :user_type, 1, class: "form-check-input", id: "user_type_1" %>
          <%= form.label :user_type_1, t('form.user_type_1'), class: "form-label", style: "font-weight: 500" %>
        </div>
        <div class="form-check">
          <%= form.radio_button :user_type, 2, class: "form-check-input", id: "user_type_2" %>
          <%= form.label :user_type_2, t('form.user_type_2'), class: "form-label", style: "font-weight: 500" %>
        </div>
      </div>
    <% end %>
    <div>
      <%= form.submit t(resource.new_record? ? 'form.btn_new' : 'form.btn_edit'), class: "btn btn-card mb-2" %>
    </div>
  </div>
<% end %>