<%= form_with(model: [:panel, :admin, admin], local: true) do |form| %>
   <div>
      <%= form.label :username, style: "display: block", for: "exampleInputEmail1", class: "form-label mb-1" %>
      <%= form.text_field :username, class: "form-control bg-light-subtle mb-3",  id: "exampleInputEmail1" %>
   </div>

   <div>
      <%= form.label :email, style: "display: block", for: "exampleInputEmail1", class: "form-label mb-1" %>
      <%= form.text_field :email, class: "form-control bg-light-subtle mb-3",  id: "exampleInputEmail1" %>
   </div>

   <div>
      <%= form.label :password, style: "display: block", for: "inputPassword4", class: "form-label mb-1" %>
      <%= form.password_field :password, class: "form-control bg-light-subtle mb-3",  id: "inputPassword4" %>
   </div>

    <div>
      <%= form.label :password_confirmation, style: "display: block", for: "inputPassword4", class: "form-label mb-1" %>
      <%= form.password_field :password_confirmation, class: "form-control bg-light-subtle mb-3",  id: "inputPassword4" %>
   </div>

   <div class="d-flex flex-column align-items-center">
      <%= form.submit t('editing.btn_edit'), class: "btn btn-card mb-2" %>
  </div>
<% end %>
