<div class="col-9 col-xl-7">
   <div class="card bg-primary-subtle py-3 px-4">
      <div class="card-header bg-primary-subtle">
         <h1 class="card-title"><%= t('index.title_admin') %></h1>
      </div>
      <table class="table table-striped table-hover">
         <thead>
            <tr>
               <th scope="col"><%= t('activerecord.attributes.admin.username') %></th>
               <th scope="col"><%= t('activerecord.attributes.admin.email') %></th>
               <th scope="col">
                  <%= link_to new_panel_admin_admin_path, class:"btn btn-info" do %>
                     <i class="fa-light fa-user-plus"></i>
                  <% end %>
               </th>
            </tr>
         </thead>
         <tbody>
            <% @admins.each do |admin| %>
               <tr>
                  <td><%= admin.username %></td>
                  <td><%= admin.email %></td>
                  <td class="gap-1">         
                     <%= link_to edit_panel_admin_admin_path(admin), class:"btn btn-primary" do %>
                        <i class="fa-light fa-user-pen"></i>
                     <% end %>

                     <%= link_to panel_admin_admin_path(admin), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class:"btn btn-danger" do %>
                        <i class="fa-light fa-user-xmark"></i>
                     <%end%>
                  </td>
               </tr>
            <% end %>
         </tbody>
      </table>
   </div>
   <%= paginate @admins %> 
</div>
