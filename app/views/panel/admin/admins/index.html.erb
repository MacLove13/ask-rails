<div class="row">
   <div class="col-9 col-xl-7">
      <div class="card">
         <div class="card-header">
            <h1 class="card-title">Administrators</h1>
         </div>
         <table class="table table-dark table-striped table-hover">
            <thead>
               <tr>
                  <th>#</th>
                  <th>Email</th>
                  <th></th>
               </tr>
            </thead>
            <tbody>
               <% @admins.each do |admin| %>
                  <tr>
                     <td><%= admin.id %></td>
                     <td><%= admin.email %></td>
                     <td>         
                        <%= link_to edit_panel_admin_admin_path(admin), class:"btn btn-primary" do %>
                           <i data-feather="edit-3"></i>
                        <% end %>

                        <button class="btn btn-danger"><i data-feather="delete"></i></button>
                     </td>
                  </tr>
               <% end %>
            </tbody>
         </table>
      </div>
   </div>
</div>
